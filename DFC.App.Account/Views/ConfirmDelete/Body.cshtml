@using DFC.App.Account.ViewModels
@model DFC.App.Account.ViewModels.ConfirmDeleteCompositeViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <govukHeadingH1 text="Do you want to delete this Skills health check?"></govukHeadingH1>
        <section>
            <table class="govuk-table">
                <caption class="govuk-table__caption govuk-heading-m"> </caption>
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" class="govuk-table__header"></th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Skills health check started @Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</td>

                    </tr>
                </tbody>
            </table>
            <div class="govuk-warning-text">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-warning-text__assistive">Warning</span>
                    If you delete this Skills health check from your account, you will not be able to access it again.
                </strong>
            </div>
        </section>
        <govukButton text="Delete"></govukButton>
        <govukButtonLink LinkText="Cancel" LinkHref="@Model.CompositeSettings.Path/@CompositeViewModel.PageId.Home"></govukButtonLink>
    </div>
    <partial name="~/ViewComponents/SpeakToAdviser/SpeakToAdvisorComponent.cshtml" />
</div>